{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "cobertura"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/tests/",
    "/coverage/"
  ],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "verbose": true,
  "testTimeout": 10000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}
